<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="inf.pedro.demo.controller.DocumentoController"
            prefWidth="780" prefHeight="460">

    <top>
        <ToolBar>
            <Button text="Novo" onAction="#onNovo"/>
            <Button text="Salvar" onAction="#onSalvar"/>
            <Button text="Excluir" onAction="#onExcluir"/>
        </ToolBar>
    </top>

    <center>
        <TableView fx:id="table" prefHeight="300">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colTitulo" text="Título" prefWidth="200"/>
                <TableColumn fx:id="colAutor" text="Autor" prefWidth="160"/>
                <TableColumn fx:id="colData" text="Data Publicação" prefWidth="120"/>
                <TableColumn fx:id="colTipo" text="Tipo" prefWidth="120"/>
                <TableColumn fx:id="colDescricao" text="Descrição" prefWidth="200"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <GridPane fx:id="formPane"
                  hgap="10" vgap="10"
                  visible="false" managed="false">
            <padding><Insets topRightBottomLeft="10"/></padding>

            <columnConstraints>
                <ColumnConstraints percentWidth="15"/>
                <ColumnConstraints percentWidth="35"/>
                <ColumnConstraints percentWidth="15"/>
                <ColumnConstraints percentWidth="35"/>
            </columnConstraints>

            <Label text="Título:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtTitulo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Autor:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <TextField fx:id="txtAutor" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

            <Label text="Data Publicação:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dpData" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Tipo:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            <ComboBox fx:id="cbTipo" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

            <Label text="Descrição:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtDescricao" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="3"/>
        </GridPane>
    </bottom>

</BorderPane>
